<configuration>
  <system.serviceModel>
    <services>
      <service behaviorConfiguration="STSBehaviour" name="Microsoft.Samples.DurableIssuedTokenProvider.SecurityTokenService">
        <!-- Set up base addresses -->
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8000/sts/"/>
          </baseAddresses>
        </host>        
        <!-- MEX endpoint(s) -->
        <endpoint contract="IMetadataExchange" binding="mexHttpBinding" address="mex"/>
        <!-- Endpoint for clients who authenticate using Windows -->
        <endpoint address="windows" binding="wsHttpBinding" contract="Microsoft.Samples.DurableIssuedTokenProvider.IWSTrust"/>
      </service>
    </services>
    
    <behaviors>
      <serviceBehaviors>
        <behavior name="STSBehaviour">
          <serviceDebug includeExceptionDetailInFaults="true"/>
          <!-- 
          The serviceMetadata behavior allows one to enable metadata (e.g. WSDL, Policy) publishing.
          This configuration enables publishing of such data over HTTP GET.
          -->
          <serviceMetadata httpGetEnabled="true"/>          
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
  
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/></startup></configuration>
