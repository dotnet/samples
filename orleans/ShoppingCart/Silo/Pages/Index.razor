@page "/"

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-16">
    <MudText Typo=Typo.h4 Class="pb-4">Welcome to the Orleans Shopping Cart</MudText>
    <MudList T="string" ReadOnly="true">
        <MudListItem T="string">
            Use the <strong>Shop Inventory</strong> link to add items to your cart.
        </MudListItem>
        <MudListItem T="string">
            Use the <strong>Product Management</strong> link to manage or create new products.
        </MudListItem>
        <MudListItem T="string">
            Use the <strong>Cart</strong> link to manage or view all the items you've placed in your cart.
        </MudListItem>
    </MudList>
</MudContainer>